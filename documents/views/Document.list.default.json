{
    "name": "Document list",
    "description": "This view is intended for displaying the list of documents.",
    "header": {
        "actions": {
            "ACTION.CREATE" : [
                {
                    "view": "form.create",
                    "description": "overload form to use for document creation"
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "label": "Preview",
                "value": "preview_image",
                "width": "5%"
            },
            {
                "type": "field",
                "value": "name",
                "width": "25%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "Created",
                "value": "created",
                "width": "20%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "Type",
                "value": "type",
                "width": "10%"
            },
            {
                "type": "field",
                "label": "Language",
                "value": "lang_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "link",
                "width": "33%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "public",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "tags",
                "label": "Tags",
                "width": "20%",
                "readonly": true
            }
        ]
    }
}