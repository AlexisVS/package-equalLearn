{
    "name": "Accounting Chart Line",
    "description": "Detail of an accounting chart line with all fields.",
    "access": {
        "groups": ["finance.default.user"]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "code",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Account Chart",
                                                "value": "account_chart_id",
                                                "width": "50%"
