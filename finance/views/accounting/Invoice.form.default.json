{
    "name": "Invoice",
    "description": "An invoice is a legal document issued by a seller to a buyer that relates to a sale, and is part of the accounting system.",
    "access": {
        "groups": ["finance.default.user"]
    },
    "actions": [
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "To Invoice.",
            "controller": "core_model_transition",
            "visible": ["status", "=", "proforma"],
            "params": {
                "entity": "finance\\accounting\\Invoice",
                "transition": "invoice",
                "ids": []
            }
        },
        {
            "id": "action.cancel",
            "label": "Cancel",
            "description": "Cancel invoice.",
            "controller": "core_model_transition",
            "confirm": true,
            "visible": ["status", "=", "invoice"],
            "params": {
                "entity": "finance\\accounting\\Invoice",
                "transition": "cancel",
                "ids": []
            }
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "id": "item.invoice_number",
                                                "type": "field",
                                                "value": "invoice_number",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "invoice_type",
                                                "width": "25%"
                                            },
                                            {
                                                "id": "item.invoice_purpose",
                                                "type": "field",
                                                "value": "invoice_purpose",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "25%",
                                                "visible": ["status", "<>", "cancelled"]
                                            },
                                            {
                                                "id": "item.reversed_invoice_id",
                                                "type": "field",
                                                "value": "reversed_invoice_id",
                                                "width": "33%",
                                                "visible": ["status", "=", "cancelled"]
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Organisation",
                                                "value": "organisation_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "emission_date",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "sections.invoice.lines",
                        "label": "Invoice Lines",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "id": "sections.invoice.lines.ids",
                                                "type": "field",
                                                "value": "invoice_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "sections.invoice.entries",
                        "label": "Accounting entries",
                        "visible": ["status", "<>", "proforma"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "accounting_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.invoice",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
