{
    "name": "Invoice Line",
    "description": "Invoice lines describe the products and quantities that are part of an invoice.",
    "access": {
        "groups": ["finance.default.user"]
     },
    "header": {
        "actions": {
            "ACTION.EDIT": false
        }
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "id": "column.invoice-and-line-group",
                                        "width": "100%",
                                        "items": [
                                            {
                                                "id": "item.name",
                                                "type": "field",
                                                "value": "name",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "label",
                                                "width": "15%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Invoice",
                                                "value": "invoice_id",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Group",
                                                "value": "invoice_line_group_id",
                                                "width": "25%",
                                                "domain": ["invoice_id", "=", "object.invoice_id"]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "id": "item.unit_price",
                                                "type": "field",
                                                "value": "unit_price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Quantity",
                                                "value": "qty",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Free Quantity",
                                                "value": "free_qty",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "discount",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "75%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "vat_rate",
                                                "width": "25%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}