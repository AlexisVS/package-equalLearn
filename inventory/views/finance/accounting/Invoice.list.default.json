{
    "name": "Invoices",
    "description": "This view is intented for displaying the invoices.",
    "access": {
        "groups": [
            "finance.default.user",
            "sale.default.user",
            "inventory.default.user"
        ]
    },
    "header": {
        "selection": {
            "default" : false,
            "actions" : [
                {
                    "id": "header.selection.actions.cancel_invoice",
                    "label": "Cancel",
                    "icon": "cancel",
                    "controller": "inventory_finance_accounting_cancel-invoice",
                    "confirm": true,
                    "params": {
                        "customer_id": "object.customer_id"
                    }
                }
            ]
        }
    },
    "operations": {
        "total": {
            "price": {
                "id": "operations.total.price",
                "label": "Total price",
                "usage": "amount/money:2",
                "operation": "SUM"
            }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "name",
                "width": "30%"
            },
            {
                "type": "field",
                "value": "date",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "customer_id",
                "label": "Customer",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "is_paid",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%"
            }
        ]
    }
}