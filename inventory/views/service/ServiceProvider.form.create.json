{
    "name": "Service Provider",
    "description": "Form holding basic information about a provider (Partner).",
    "layout": {
        "extends": {
            "entity": "identity\\Partner",
            "view": "form.create"
        },
        "remove": [
            "group.partner_info"
        ],
        "update": {
            "section.identity_info": {
                "after": [
                    {
                        "id": "section.provider",
                        "label": "Provider specifics",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "service_provider_category_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "login_url",
                                                "label": "Url login",
                                                "width": "100%",
                                                "widget": {
                                                    "usage": "url"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.product.services",
                        "label": "Services",
                        "visible": [
                            "state",
                            "<>",
                            "draft"
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "services_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.selection"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}
