{
    "name": "Subscription",
    "description": "Subscription of a service.",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "Subscription Infos",
                        "id": "section.subscription",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "15%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "40%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "duration",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "33%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "label": "Is expired",
                                                "value": "is_expired",
                                                "readonly": true,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Upcoming expiry",
                                                "value": "has_upcoming_expiry",
                                                "readonly": true,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "ref_order",
                                                "label": "Reference",
                                                "width": "80%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "license_key",
                                                "label": "License Key",
                                                "width": "80%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "5%",
                                        "align": "left",
                                        "items": []
                                    },
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "service_id",
                                                "label": "Service",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "label": "Customer",
                                                "readonly": true,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_billable",
                                                "label": "is Billable",
                                                "readonly": true,
                                                "width": "35%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_internal",
                                                "label": "Is Internal",
                                                "readonly": true,
                                                "width": "35%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_external_provider",
                                                "label": "Has external provider",
                                                "readonly": true,
                                                "width": "35%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "product_id",
                                                "label": "Product (Catalog)",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "label": "Price",
                                                "readonly": true,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_receivable",
                                                "label": "Has Receivable",
                                                "readonly": true,
                                                "visible": [
                                                    "state",
                                                    "<>",
                                                    "draft"
                                                ],
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "receivable_id",
                                                "label": "Receivable",
                                                "visible": [
                                                    "state",
                                                    "<>",
                                                    "draft"
                                                ],
                                                "readonly": true,
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "80%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Description",
                                                "value": "description",
                                                "width": "50%",
                                                "widget": {
                                                    "usage": "string/text"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Entries",
                        "id": "section.subscription-entries",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "subscription_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.default",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}