{
    "name": "Subscriptions",
    "description": "Default listing of all subscriptions.",
    "controller": "sale_subscription_subscription-collect",
    "order": "date_from,date_to,name",
    "sort": "asc",
    "domain": ["service_id", "<>", null],
    "operations": {
        "total": {
            "price": {
                "id": "operations.total.price",
                "label": "Total price",
                "usage": "amount/money:2",
                "operation": "SUM"
            }
        }
    },
    "header": {
        "selection": {
            "default": false,
            "actions" : [
                {
                    "id": "action.bulk_check_expiration",
                    "label": "Update expiration columns",
                    "icon": "update",
                    "controller": "inventory_service_bulk-check-expirations",
                    "confirm": true
                }
            ]
        },
        "actions": {
            "ACTION.CREATE": [
                {
                    "view": "form.create",
                    "description": "Overload form to use for subscription creation."
                }
            ]
        }
    },
    "layout": {
        "extends": {
            "entity": "sale\\subscription\\Subscription",
            "view": "list.default"
        },
        "update": {
            "item.customer": {
                "before": [
                    {
                        "type": "field",
                        "value": "service_id",
                        "label": "Service",
                        "width": "30%"
                    },
                    {
                        "type": "field",
                        "value": "has_external_provider",
                        "label": "Has external provider",
                        "width": "20%",
                        "readonly": true,
                        "sortable": true
                    },
                    {
                        "type": "field",
                        "value": "service_provider_id",
                        "label": "Provider",
                        "width": "20%",
                        "readonly": true,
                        "sortable": true
                    }
                ]
            }
        }
    }
}