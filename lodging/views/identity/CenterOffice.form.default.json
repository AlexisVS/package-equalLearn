                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%",
                                                "header": {
                                                    "actions": {
                                                        "ACTION.CREATE": [ {
                                                            "domain": [ ["center_office_id", "=", "object.center_office_id"] ]
