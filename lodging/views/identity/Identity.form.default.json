{
    "name": "Identity",
    "description": "An identity is any kind of person: moral (organisation) or physical (individual).",
    "access": {
        "groups": ["sale.default.user", "booking.default.user"]
    },
    "routes": [
        {
            "id": "item.identity.booking.file",
            "label": "Créer une réservation",
            "description": "",
            "icon": "library_books",
            "route": "/bookings",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.create",
                "mode": "edit",
                "purpose": "create",
                "domain": ["customer_identity_id", "=", "object.id"],
                "reset": true
            }
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "legal_name",
                                                "width": "50%",
                                                "widget": {
                                                    "header": false
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "short_name",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "firstname",
                                                "width": "50%",
                                                "widget": {
                                                    "header": false
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "lastname",
                                                "width": "50%",
                                                "widget": {
                                                    "header": false
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "type_id",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions":{
                                                            "ACTION.CREATE": false  
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "100%",
                                                "visible": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.identity_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "25%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Language",
                                                "value": "lang_id",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "ACTION.CREATE": false
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "title",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "gender",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_vat",
                                                "width": "100%",
                                                "label": "Subject to VAT",
                                                "help": "Do the company have a VAT number?"
                                            },
                                            {
                                                "type": "field",
                                                "value": "registration_number",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "citizen_identification",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "vat_number",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_of_birth",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "bank_account_iban",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "bank_account_bic",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "email",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "phone",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "website",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "reference_partner_id",
                                                "label": "Person of reference",
                                                "width": "100%",
                                                "domain": ["owner_identity_id", "=", "object.id"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_street",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_dispatch",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_city",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_zip",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_state",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_country",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Settings",
                        "id": "section.settings",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "user_id",
                                                "width": "50%",
                                                "widget": {
                                                    "header": {
                                                        "actions":{
                                                            "ACTION.CREATE": false  
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "signature",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Other addresses",
                        "id": "section.identity_addresses",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "addresses_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contacts",
                        "id": "section.identity_contacts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Relations",
                        "id": "section.identity_relations",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "partners_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}