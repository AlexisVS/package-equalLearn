{
    "name": "Booking list",
    "description": "This view displays the list of bookings: the most recent on top.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "layout": {
        "entity": "lodging\\sale\\booking\\Booking",
        "group_by": "range",
        "range_interval": "month",
        "range_from": "date.year.first_day",
        "range_to": "date.year.last_day",
        "datasets": [
            {
                "operation": ["SUM", "object.total"],
                "domain"   : ["type", "=", "general"]
            },
            {
                "operation": ["SUM", "object.price"],
                "domain"   : ["type", "=", "school_trip"]
            },
            {
                "operation": ["SUM", "object.price"],
                "domain"   : ["type", "=", "sport_camp"]
            }
        ]
    }
}