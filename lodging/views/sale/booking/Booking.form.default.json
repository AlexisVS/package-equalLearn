{
    "name": "Booking",
    "description": "",
    "actions": [
        {
            "id": "action.quote",
            "label": "Revert to Quote",
            "description": "Rental units will no longer be reserved and will be available for other bookings.",
            "controller": "lodging_booking_quote",
            "confirm": true,
            "visible": ["status", "in", ["option", "confirmed"]]
        },
        {
            "id": "action.option",
            "label": "Set as Option",
            "description": "Rental units will be reserved but no funding will be claimed yet.",
            "controller": "lodging_booking_option",
            "confirm": true,
            "visible": ["status", "=", "quote"]
        },
        {
            "id": "action.confirm",
            "label": "Confirm Booking",
            "description": "Rental units will be reserved and the invoicing plan will be set up.",
            "controller": "lodging_booking_confirm",
            "confirm": true,
            "visible": ["status", "=", "option"]
        },
        {
            "id": "action.checkin",
            "label": "Check In",
            "description": "The host has arrived: the rental units will be marked as occupied.",
            "controller": "lodging_booking_checkin",
            "confirm": true,
            "visible": ["status", "in", ["confirmed", "validated"]]
        },
        {
            "id": "action.checkout",
            "label": "Check Out",
            "description": "The host is leaving: the rental units will be marked for cleaning.",
            "controller": "lodging_booking_checkout",
            "confirm": true,
            "visible": ["status", "=", "checkedin"]
        },
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "The host has left and room has been reviewed: emit the invoice.",
            "controller": "lodging_booking_invoice",
            "confirm": true,
            "visible": ["status", "=", "checkedout"]
        },
        {
            "id": "action.cancel",
            "label": "Cancel",
            "description": "The booking will be cancelled and rental units will be freed. Possible cancellation fee will be applied.",
            "controller": "lodging_booking_cancel",
            "confirm": true
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "name",
                                                "width": "33%",
                                                "widget": {
                                                    "header": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%",
                                                "widget": {
                                                    "header": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_identity_id",
                                                "width": "0%",
                                                "visible": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.booking_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Type",
                                                "value": "type_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "form.create"
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Organisation of Payer",
                                                "value": "has_payer_organisation",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "payer_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Description",
                        "id": "section.booking_description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contacts",
                        "id": "section.booking_contacts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Products",
                        "id": "section.booking_products",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "booking_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },                    
                    {
                        "label": "Contracts",
                        "id": "section.booking_contracts",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "sort": "desc"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Fundings",
                        "id": "section.booking_fundings",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }                   
                ]
            }
        ]
    }
}