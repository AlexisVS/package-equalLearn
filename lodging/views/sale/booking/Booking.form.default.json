{
    "name": "Booking",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "actions": [
        {
            "id": "action.quote",
            "label": "Revert to Quote",
            "description": "Rental units will no longer be reserved and will be available for other bookings.",
            "controller": "lodging_booking_quote",
            "confirm": true,
            "visible": ["status", "in", ["option", "confirmed"]]
        },
        {
            "id": "action.option",
            "label": "Set as Option",
            "description": "Rental units will be reserved but no funding will be claimed yet.",
            "controller": "lodging_booking_option",
            "confirm": true,
            "visible": ["status", "=", "quote"]
        },
        {
            "id": "action.confirm",
            "label": "Confirm Booking",
            "description": "Rental units will be reserved and the invoicing plan will be set up.",
            "controller": "lodging_booking_confirm",
            "confirm": true,
            "visible": ["status", "=", "option"]
        },
        {
            "id": "action.checkin",
            "label": "Check In",
            "description": "The host has arrived: the rental units will be marked as occupied.",
            "controller": "lodging_booking_checkin",
            "confirm": true,
            "visible": ["status", "in", ["confirmed", "validated"]]
        },
        {
            "id": "action.checkout",
            "label": "Check Out",
            "description": "The host is leaving: the rental units will be marked for cleaning.",
            "controller": "lodging_booking_checkout",
            "confirm": true,
            "visible": ["status", "=", "checkedin"]
        },
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "The host has left and room has been reviewed: emit the invoice, if necessary.",
            "controller": "lodging_booking_invoice",
            "confirm": true,
            "visible": ["status", "=", "checkedout"]
        },
        {
            "id": "action.cancel",
            "label": "Cancel",
            "description": "The booking will be cancelled and rental units will be freed. Possible cancellation fee will be applied.",
            "controller": "lodging_booking_cancel",
            "params": {
                "id": "object.id"
            },
            "confirm": true,
            "visible": ["status", "<>", "balanced"]
        }
    ],
    "routes": [
        {
            "id": "item.booking.file",
            "label": "Booking form",
            "description": "",
            "icon": "library_books",
            "route": "/booking/object.id",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.default",
                "domain": ["id", "=", "object.id"],
                "reset": true
            }
        },
        {
            "id": "item.booking.edit",
            "label": "Booked services",
            "description": "",
            "icon": "room_service",
            "route": "/booking/object.id/services"
        },
        {
            "id": "item.booking.composition",
            "label": "Hosts details",
            "description": "",
            "icon": "view_list",
            "route": "/booking/object.id/composition",            
            "visible": ["status", "not in", ["quote", "option"]]
        },
        {
            "id": "item.booking.contract",
            "label": "Send contract",
            "description": "",
            "icon": "drive_file_rename_outline",
            "route": "/booking/object.id/contract",
            "visible": ["has_contract", "=", true]
        },
        {
            "id": "item.booking.quote",
            "label": "Send quote",
            "description": "",
            "icon": "drive_file_rename_outline",
            "route": "/booking/object.id/quote",
            "visible": ["status", "=", "quote"]
        },
        {
            "id": "item.booking.consumptions",
            "label": "Consumptions",
            "description": "",
            "icon": "calendar_today",
            "route": "/booking/object.id",
            "context": {
                "entity": "lodging\\sale\\booking\\Consumption",
                "target_entity": "lodging\\sale\\booking\\Booking",
                "view": "list.default",
                "domain": ["booking_id", "=", "object.id"]
            },
            "visible": ["status", "<>", "quote"]
        }
    ],    
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "name",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "25%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.booking_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_identity_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "visible": false
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Organisation of Payer",
                                                "value": "has_payer_organisation",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Price to be confirmed",
                                                "value": "is_price_tbc",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "payer_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contacts",
                        "id": "section.booking_contacts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Composition",
                        "id": "section.booking_composition",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "composition_items_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },                                        
                    {
                        "label": "Consumptions",
                        "id": "section.booking_consumptions",
                        "visible": ["status", "<>", "quote"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "consumptions_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contracts",
                        "id": "section.booking_contracts",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "sort": "desc"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Fundings",
                        "id": "section.booking_fundings",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Invoices",
                        "id": "section.booking_invoices",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}