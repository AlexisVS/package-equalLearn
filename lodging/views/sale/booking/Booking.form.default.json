{
    "name": "Booking",
    "description": "",
    "actions": [
        {
            "id": "action.quote",
            "label": "Revert to Quote",
            "description": "Rental units will no longer be reserved and will be available for other bookings.",
            "controller": "lodging_booking_quote",
            "confirm": true,
            "visible": ["status", "in", ["option", "confirmed"]]
        },
        {
            "id": "action.option",
            "label": "Set as Option",
            "description": "Rental units will be reserved but no funding will be claimed yet.",
            "controller": "lodging_booking_option",
            "visible": ["status", "=", "quote"]
        },
        {
            "id": "action.confirm",
            "label": "Confirm Booking",
            "description": "Rental units will be reserved and the invoicing plan will be set up.",
            "controller": "lodging_booking_confirm",
            "visible": ["status", "=", "option"]
        },
        {
            "id": "action.checkin",
            "label": "Check In",
            "description": "The host has arrived: the rental units will be marked as occupied.",
            "controller": "lodging_booking_checkin",
            "visible": ["status", "=", "validated"]
        },
        {
            "id": "action.checkout",
            "label": "Check Out",
            "description": "The host is leaving: the rental units will be marked for cleaning.",
            "controller": "lodging_booking_checkout",
            "visible": ["status", "=", "checkedin"]
        },
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "The host has left and room has been reviewed: emit the invoice.",
            "controller": "lodging_booking_invoice",
            "visible": ["status", "=", "checkedout"]
        }
    ],
    "routes": [
        {
            "id": "item.booking.contract",
            "label": "Fiche de réservation",
            "description": "",
            "icon": "library_books",
            "route": "/bookings/",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.default",
                "domain": ["id", "=", "object.id"]
            }
        },
        {
            "id": "item.booking.edit",
            "label": "Services réservés",
            "description": "",
            "icon": "room_service",
            "route": "/bookings/edit/object.id"
        },
        {
            "id": "item.booking.composition",
            "label": "Composition",
            "description": "",
            "icon": "view_list",
            "route": "/bookings/composition/object.id"
        },
        {
            "id": "item.booking.contract",
            "label": "Envoi du contrat",
            "description": "",
            "icon": "drive_file_rename_outline",
            "route": "/bookings/contract/object.id",
            "visible": ["has_contract", "=", "true"]
        },
        {
            "id": "item.booking.contract",
            "label": "Consommations",
            "description": "",
            "icon": "calendar_today",
            "route": "/bookings/",
            "context": {
                "entity": "lodging\\sale\\booking\\Consumption",
                "view": "list.default",
                "domain": ["booking_id", "=", "object.id"]
            }
        }
    ],
    "checks": [
        {
            "id": "booking.validator.overbooking",
            "label": "Vérifier Surbooking",
            "description": "Voir les réservations en conflit.",
            "controller": "lodging_booking_check-overbooking"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "name",
                                                "width": "33%",
                                                "widget": {
                                                    "header": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_identity_id",
                                                "width": "0%",
                                                "visible": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.booking_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Type",
                                                "value": "type_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "form.create"
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Organisation of Payer",
                                                "value": "has_payer_organisation",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "payer_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }                                    
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Description",
                        "id": "section.booking_description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contacts",
                        "id": "section.booking_contacts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contracts",
                        "id": "section.booking_contracts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Products",
                        "id": "section.booking_products",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "booking_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }                    
                ]
            }
        ]
    }
}