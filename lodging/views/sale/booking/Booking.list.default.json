{
    "name": "Booking list",
    "description": "This view displays the list of bookings: the most recent on top.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "order": "created",
    "sort": "desc",
    "domain": ["center_office_id", "in", "user.center_offices_ids"],
    "controller": "lodging_booking_collect",
    "header": {
        "actions": {
            "ACTION.CREATE" : [
                {
                    "view": "form.create",
                    "description": "overload form to use for booking creation"
                }
            ]
        },
        "layout": {

        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "label": "reference",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "From",
                "value": "date_from",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "To",
                "value": "date_to",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "label": "Customer",
                "value": "customer_id",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "type_id",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "Center",
                "value": "center_id",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "Nb Pers",
                "value": "nb_pers",
                "width": "15%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "label": "Price",
                "value": "price",
                "width": "15%",
                "sortable": true,
                "readonly": true                
            }
        ]
    }
}