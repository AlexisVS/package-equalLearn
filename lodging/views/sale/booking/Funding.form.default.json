{
    "name": "Funding",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "routes": [
        {
            "id": "item.funding.booking.file",
            "label": "Fiche de réservation",
            "description": "",
            "icon": "library_books",
            "route": "/booking/object.booking_id",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.default",
                "domain": ["id", "=", "object.booking_id"]
            }
        },
        {
            "id": "item.funding.send",
            "label": "Envoi / Rappel",
            "description": "Envoyer la demande",
            "icon": "email",
            "route": "/booking/object.booking_id/funding/object.id/remind"
        },
        {
            "id": "item.funding.invoice",
            "label": "Créer une facture",
            "description": "",
            "icon": "file_copy",
            "route": "/booking/object.booking_id/funding/object.id/invoice",
            "visible": ["type", "=", "installment"]
        }
    ],    
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "id": "section.funding",
                        "label": "General Info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Booking",
                                                "value": "booking_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "due_amount",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Payment Deadline",
                                                "value": "payment_deadline_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Invoice",
                                                "value": "invoice_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "payment_reference",
                                                "width": "50%"
                                            }
                                        ]
                                    }                                    
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.payments",
                        "label": "Payments",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payments_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}