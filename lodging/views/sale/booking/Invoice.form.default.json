{
    "name": "Invoice",
    "description": "An invoice is a legal document issued by a seller to a buyer that relates to a sale, and is part of the accounting system.",
    "actions": [
        {
            "id": "action.invoice",
            "label": "Emit invoice",
            "description": "A new invoice will be generated from the proforma version. A number will be assigned to the invoice which will become read-only.",
            "controller": "lodging_invoice_do-emit",
            "confirm": true,
            "visible": ["status", "=", "proforma"]
        }
    ],
    "routes": [
        {
            "id": "item.invoice.booking.file",
            "label": "Fiche de r√©servation",
            "description": "",
            "icon": "library_books",
            "route": "/booking/object.booking_id",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.default"
            }
        },
        {
            "id": "item.invoice.send",
            "label": "Imprimer/Envoyer",
            "description": "",
            "icon": "print",
            "route": "/booking/object.booking_id/invoice/object.id"
        }
    ],    
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "number",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner",
                                                "value": "partner_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Booking",
                                                "value": "booking_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "33%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Organisation",
                                                "value": "organisation_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Management",
                                                "value": "center_office_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "66%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date",
                                                "width": "33%",
                                                "widget": {
                                                    "type": "date"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoice_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false        
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
