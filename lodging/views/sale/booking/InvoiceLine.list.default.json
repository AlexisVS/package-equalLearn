{
    "name": "Invoices",
    "description": "This view is intented for displaying the invoices.",
    "access": {
        "groups": ["finance.default.user", "sale.default.user"]
    },
    "operations": {
        "total": {
            "total": {
                "operation": "SUM",
                "usage": "amount/money:2"
            },
            "price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "limit": 100,
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "unit_price",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "qty",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "free_qty",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "discount",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "vat_rate",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "total",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "10%"
            }
        ]
    }
}