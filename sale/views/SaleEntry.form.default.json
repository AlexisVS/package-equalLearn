{
    "name": "Sale Entry",
    "description": "Sale entry modification form.",
    "actions": [
        {
            "id": "action.transition.bill",
            "label": "Bill",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\SaleEntry",
                "transition": "bill",
                "ids": []
            },
            "visible": [
                ["state", "<>", "draft"],
                ["status", "in", ["pending", "validated"]],
                ["is_billable", "=", true]
            ]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "label": "Description",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "label",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "label": "Customer",
                                                "width": "25%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.sale",
                        "label": "Sale",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_id",
                                                "label": "Product (Catalog)",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "label": "Price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "unit_price",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Quantity",
                                                "value": "qty",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.billing",
                        "label": "Billing",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "is_billable",
                                                "label": "Is billable",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_receivable",
                                                "label": "Has receivable",
                                                "width": "50%",
                                                "visible": ["is_billable", "=", true],
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "receivable_id",
                                                "label": "Receivable",
                                                "readonly": true,
                                                "width": "50%",
                                                "visible": ["has_receivable", "=", true],
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}