{
    "name": "Invoice Lines",
    "description": "Displays invoice lines.",
    "access": {
        "groups": ["sale.default.user"]
    },
    "group_by": [
        {
            "field": "invoice_line_group_id",
            "open": true
        }
    ],
    "operations": {
        "total": {
            "price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "limit": 100,
    "layout": {
        "extends": {
            "entity": "finance\\accounting\\InvoiceLine",
            "view": "list.default"
        },
        "remove": [
            "item.name"
        ],
        "update": {
            "item.group": {
                "after": [
                    {
                        "type": "field",
                        "value": "product_id",
                        "label": "Product",
                        "width": "25%"
                    }
                ]
            }
        }
    }
}