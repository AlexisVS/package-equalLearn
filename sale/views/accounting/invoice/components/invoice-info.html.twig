<div class="{{ class }}">
    <h2 style="text-transform: capitalize;">
        {{ invoice_label }}
    </h2>

    <div style="margin-bottom: 5px; margin-top: 5px; text-transform: uppercase; font-size: 13px;">
        {{ number_label }}: <b>{{ invoice.name }}</b>
    </div>

    <div style="margin-bottom: 5px; text-transform: uppercase; font-size: 13px;">
        {{ date_label }}: <b>{{ invoice.date | date(date_format, timezone) }}</b>
    </div>

    <div style="margin-bottom: 5px; text-transform: uppercase; font-size: 13px;">
        {{ status_label }}:
        <b style="font-size: 13px">
            {% if invoice.payment_status in ['balanced', 'credit_balance'] %}
                {{ status_paid_label }}
            {% else %}
                {% if invoice.invoice_type == 'invoice' %}
                    {{ status_to_pay_label }}
                {% else %}
                    {{ status_to_refund_label }}
                {% endif %}
            {% endif %}
        </b>
    </div>
</div>
