{
    "name": "Funding list",
    "description": "This view displays the list of bookings: the most recent on top.",
    "access": {
        "groups": ["finance.default.user"]
    },
    "layout": {
        "entity": "lodging\\sale\\booking\\Funding",
        "group_by": "range",
        "range_interval": "month",
        "range_from": "date.year.first_day",
        "range_to": "date.year.last_day",
        "datasets": [
            {
                "operation": ["SUM", "object.due_amount"],
                "domain"   : ["due_amount", "<", 0]
            }
        ]
    }
}