{
    "name": "Family",
    "description": "A Product Family is a group of goods produced under the same brand.",
    "access": {
        "groups": ["pos.default.users", "sale.default.users"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General Info",
                        "id": "section.family_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Parent",
                                                "value": "parent_id",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "path",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Children",
                        "id": "section.children_section",
                        "visible" : ["state" , "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "children_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Products",
                        "id": "section.product_models",
                        "visible" : ["state" , "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_models_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["can_sell", "=", true]
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }

                ]
            }
       ]
    }
}