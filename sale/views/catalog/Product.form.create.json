{
    "name": "Product",
    "description": "A Product is a variant of a Product Model. There is always at least one Product for a given Product Model.",
    "access": {
        "groups": ["pos.default.users", "sale.default.users"]
    },
    "extends": {
        "entity": "sale\\catalog\\Product",
        "view": "form.default"
    },
    "layout": {
        "remove": [
            "section.product",
            "section.attributes",
            "section.groups",
            "section.pack_lines",
            "section.prices",
            "section.attributes"
        ],
        "update": {
            "item.product_model_id": {
                "attributes": {
                    "readonly": false
                }
            }
        }
    }
}
