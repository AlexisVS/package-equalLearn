{
    "name": "Product",
    "description": "A Product is a variant of a Product Model. There is always at least one Product for a given Product Model.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "label",
                                                "width": "60%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Product Model",
                                                "value": "product_model_id",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "id": "group.tabs",
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.product",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "sku",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Family",
                                                "value": "family_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "can_sell",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "can_buy",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_pack",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_own_price",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Description",
                        "id": "section.Description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Description",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Attributes",
                        "id": "section.attributes",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_attributes_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.product"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Groups",
                        "id": "section.groups",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Pack Products",
                        "id": "section.pack_lines",
                        "visible": ["is_pack", "=", true],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "pack_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Prices",
                        "id": "section.prices",
                        "visible": [ [["is_pack", "=", false]], [["has_own_price", "=", true]] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "prices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.default"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Subscriptions",
                        "id": "section.attributes",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "subscriptions_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.default"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
