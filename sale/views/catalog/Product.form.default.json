{
    "name": "Product",
    "description": "A Product is a variant of a Product Model. There is always at least one Product for a given Product Model.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "label",
                                                "width": "60%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Product Model",
                                                "value": "product_model_id",
                                                "width": "100%",
                                                "readonly": true
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "id": "group.tabs",
                "sections": [
                    {
                        "id": "section.details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "sku",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Family",
                                                "value": "family_id",
                                                "width": "66%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "label",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "can_sell",
                                                "width": "50%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "can_buy",
                                                "width": "50%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_pack",
                                                "width": "50%",
                                                "visible": ["state", "<>", "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_own_price",
                                                "width": "50%",
                                                "visible": [["state", "<>", "draft"], ["is_pack", "=", true]]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.Description",
                        "label": "Description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Description",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.attributes",
                        "label": "Attributes",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_attributes_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.groups",
                        "label": "Groups",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.pack_lines",
                        "label": "Pack Products",
                        "visible": [
                            ["state", "<>", "draft"],
                            ["is_pack", "=", true]
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "pack_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.prices",
                        "label": "Prices",
                        "visible": [
                            [["state", "<>", "draft"], ["is_pack", "=", false]],
                            [["state", "<>", "draft"], ["has_own_price", "=", true]]
                        ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "prices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.default"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.subscriptions",
                        "label": "Subscriptions",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "subscriptions_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.default"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
