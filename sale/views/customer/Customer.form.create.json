{
    "name": "Customer",
    "description": "Basic form for creating a customer (Partner) for inventory package",
    "access": {
        "groups": ["inventory.default.user"]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Identity of Customer",
                                                "value": "partner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Owner Identity",
                                                "value": "owner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "relationship",
                                                "width": "50%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "partner_position",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner Organisation",
                                                "value": "partner_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Customer Nature",
                                                "value": "customer_nature_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer Type",
                                                "value": "customer_type_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Fare class",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_external_ref",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "ref_account",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_tour_operator",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}