{
    "name": "Customer",
    "description": "Basic form for displaying a customer (Partner) for inventory package",
    "access": {
        "groups": ["inventory.default.user"]
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "75%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Name of Customer",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.customer_details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Identity of Customer",
                                                "value": "partner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Owner Identity",
                                                "value": "owner_identity_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "relationship",
                                                "width": "50%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "partner_position",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partner Organisation",
                                                "value": "partner_organisation_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Customer Nature",
                                                "value": "customer_nature_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer Type",
                                                "value": "customer_type_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Fare class",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_external_ref",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "ref_account",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_tour_operator",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customer_sales_entries",
                        "label": "Sales entries",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "sales_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.default",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customers_receivables_list",
                        "label": "Receivables",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "receivables_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.default",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customer_bookings",
                        "label": "Bookings",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "bookings_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.default",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customer_products",
                        "label": "Inventory Products",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "products_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.selection",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.product_services",
                        "label": "Services",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "services_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.selection",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customers_softwares",
                        "label": "Softwares",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "softwares_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.selection",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.customers_invoices_list",
                        "label": "Invoices",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "view": "list.default",
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}