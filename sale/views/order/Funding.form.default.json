{
    "name": "Funding",
    "description": "",
    "access": {
        "groups": ["order.default.users"]
    },
    "actions": [
        {
            "id": "action.pay.append",
            "label": "Add instant payment",
            "controller": "sale_order_funding_do-pay-append",
            "visible": ["is_paid", "=", false]
        },
        {
            "id": "action.pay.remove",
            "label": "Remove payment",
            "controller": "sale_order_funding_do-pay-remove",
            "visible": ["is_paid", "=", true]
        },
        {
            "id": "action.invoice",
            "label": "Create invoice",
            "controller": "sale_order_funding_convert"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.funding",
                        "label": "General Info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Order",
                                                "value": "order_id",
                                                "width": "50%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "paid_amount",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_amount",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Payment Deadline",
                                                "value": "payment_deadline_id",
                                                "width": "50%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Invoice",
                                                "value": "invoice_id",
                                                "width": "50%",
                                                "visible" : true
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "payment_reference",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.payments",
                        "label": "Payments",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payments_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["status", "=", "paid"],
                                                    "view": "list.default",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE" : false
                                                        },
                                                        "selection": false
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}