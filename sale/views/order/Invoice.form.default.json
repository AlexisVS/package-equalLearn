{
    "name": "Invoice",
    "description": "An invoice is a legal document issued by a seller to a buyer that relates to a sale, and is part of the accounting system.",
    "access": {
        "groups": ["order.default.users"]
    },
    "actions": [
        {
            "id": "action.do.emit",
            "label": "Emit",
            "controller": "sale_order_invoice_do-emit",
            "visible": ["status" , "=", "proforma"]
        },
        {
            "id": "action.remove",
            "label": "Delete invoice",
            "description": "The proforma invoice will be deleted.",
            "controller": "sale_order_invoice_do-delete",
            "confirm": true,
            "visible": ["status", "=", "proforma"]
        },
        {
            "id": "action.reverse",
            "label": "Reverse",
            "description": "A new credit note will be generated from the invoice. The invoice will be cancelled and reversing accounting entries will be created.",
            "controller": "sale_order_invoice_do-reverse",
            "confirm": true,
            "visible": [["status", "=", "invoice"], ["invoice_type", "=", "invoice"]]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Order",
                                                "value": "order_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "payment_terms_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "invoice_type",
                                                "width": "0%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Organisation",
                                                "value": "organisation_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "emission_date",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoice_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.order",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE" : false
                                                        },
                                                        "selection": false
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
