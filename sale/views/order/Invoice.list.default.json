{
    "name": "Invoices",
    "description": "This view is intended for displaying the list of invoices.",
    "access": {
        "groups": ["order.default.users"]
    },
    "operations": {
        "total": {
            "price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "invoice_number",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Order",
                "value": "order_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "emission_date",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "invoice_type",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "is_downpayment",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "balance",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "price_billed",
                "width": "15%"
            }
        ]
    }
}