{
    "name": "Order",
    "description": "",
    "access": {
        "groups": [
            "order.default.users"
        ]
    },
    "actions": [
        {
            "id": "action.quote",
            "label": "Quote",
            "controller": "sale_order_do-quote",
            "visible": ["status" , "in", ["option","confirmed", "validated"]]
        },
        {
            "id": "action.option",
            "label": "Option",
            "controller": "sale_order_do-option",
            "visible": ["status" , "=", "quote"]
        },
        {
            "id": "action.confirm",
            "label": "Confirm",
            "controller": "sale_order_do-confirm",
            "visible": ["status" , "=", "option"]
        },
        {
            "id": "action.option-confirm",
            "label": "Quote to Confirm",
            "controller": "sale_order_do-option-confirm",
            "visible": ["status" , "=", "quote"]
        },
        {
            "id": "action.checkin",
            "label": "Check-in",
            "controller": "sale_order_do-checkin",
            "visible": ["status", "in", ["confirmed", "validated"]]
        },
        {
            "id": "action.checkout",
            "label": "Check Out",
            "controller": "sale_order_do-checkout",
            "visible": ["status", "=", "checkedin"]
        },
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "All additional consumptions have been added. A proforma invoice will be generated.",
            "controller": "sale_order_do-invoice",
            "confirm": true,
            "visible": ["status", "=", "checkedout"]
        },
        {
            "id": "action.invoice-back",
            "label": "Back to Check Out",
            "description": "Adaptations are still required and the proforma invoice will have to be regenerated.",
            "controller": "sale_order_do-checkout",
            "confirm": true,
            "visible": [["is_invoiced", "=", false],["status", "in", ["invoiced", "debit_balance", "credit_balance", "balanced"]]]
        },
        {
            "id": "action.update-status",
            "label": "Update status",
            "description": "The status of the order will be adapted according to the status of its fundings.",
            "controller": "sale_order_update-status",
            "visible": [ ["status", "in", ["invoiced", "debit_balance", "credit_balance"]] ]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "width": "100%",
                                                "label": "Customer",
                                                "widget": {
                                                    "view": "form.create"
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "100%",
                                                "visible": ["state" , "<>" , "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_reference",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_invoiced",
                                                "width": "50%",
                                                "visible": ["is_noexpiry", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_noexpiry",
                                                "width": "50%",
                                                "visible": ["is_noexpiry", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_expiry",
                                                "width": "50%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "items": []
                                    },
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "label": "Reference",
                                                "visible": ["state" , "<>" , "draft"],
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "delivery_date",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "100%",
                                                "visible": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.order_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Order Lines Groups",
                        "id": "section.order_groups",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "order_lines_groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Order Lines",
                        "id": "section.order_lines",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "order_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contracts",
                        "id": "section.order_contracts",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Fundings",
                        "id": "section.order_fundings",
                        "visible": [ [["status", "not in", ["quote", "option"]]], [["is_cancelled", "=", true]] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Invoices",
                        "id": "section.order_invoices",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}