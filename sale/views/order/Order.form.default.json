{
    "name": "Order",
    "description": "",
    "access": {
        "groups": [
            "order.default.users"
        ]
    },
    "actions": [
        {
            "id": "action.option-order",
            "label": "Option",
            "controller": "sale_order_do-option"
        },
        {
            "id": "action.confirm-order",
            "label": "Confirm",
            "controller": "sale_order_do-confirm"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "width": "100%",
                                                "label": "Customer",
                                                "widget": {
                                                    "view": "form.create"
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "100%",
                                                "visible": ["state" , "<>" , "draft"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_reference",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_noexpiry",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_expiry",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "items": []
                                    },
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "label": "Reference",
                                                "visible": ["state" , "<>" , "draft"],
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "delivery_date",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "100%",
                                                "visible": false
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.order_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Order Line Group",
                        "id": "section.order.line.groups",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "order_lines_groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Order Lines",
                        "id": "section.order.lines",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "order_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Fundings",
                        "id": "section.fundings",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contracts",
                        "id": "section.order_contracts",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Invoices",
                        "id": "section.invoices",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}