{
    "name": "Order list",
    "description": "This view is intended for displaying the list of orders.",
    "access": {
        "groups": ["order.default.users"]
     },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "label": "reference",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Customer",
                "value": "customer_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Date",
                "value": "delivery_date",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Status",
                "value": "status",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "total",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "15%"
            }
        ]
    }
}