{
    "name": "Order Line",
    "description": "Order lines describe the products and quantities that are part of a order.",
    "access": {
        "groups": ["order.default.users"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.order_line",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Line Order Group",
                                                "value": "order_line_group_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Product",
                                                "value": "product_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Price",
                                                "value": "price_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Unit Price",
                                                "value": "unit_price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Quantity",
                                                "value": "qty",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Discount",
                                                "value": "discount",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Free quantity",
                                                "value": "free_qty",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "fare_benefit",
                                                "width": "50%",
                                                "readonly" : true
                                            },
                                            {
                                                "type": "field",
                                                "value": "total",
                                                "width": "50%",
                                                "readonly" : true
                                            },
                                            {
                                                "type": "field",
                                                "value": "vat_rate",
                                                "width": "50%",
                                                "readonly" : true
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "50%",
                                                "readonly" : true
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Price Adapter",
                        "id": "section.price_adapter",
                        "visible": ["state" , "<>" , "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "price_adapters_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}