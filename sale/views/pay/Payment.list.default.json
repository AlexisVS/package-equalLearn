{
    "name": "Payments",
    "description": "This view is intended for displaying the list of payments.",
    "access": {
        "groups": ["sale.default.users"]
     },
    "operations": {
        "total": {
            "amount": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "label": "Customer",
                "value": "customer_id",
                "width": "25%"
            },
            {
                "type": "field",
                "value": "receipt_date",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "payment_origin",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "payment_method",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "amount",
                "width": "15%"
            }
        ]
    }
}