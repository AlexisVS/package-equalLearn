{
    "name": "Payments",
    "description": "This view is intended for displaying the list of payments.",
    "access": {
        "groups": ["sale.default.user"]
    },
    "operations": {
        "total": {
            "amount": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "limit": 100,
    "layout": {
        "items": [
            {
                "type": "field",
                "label": "Partner",
                "value": "partner_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "amount",
                "width": "10%"
            },
            {
                "type": "field",
                "label": "Funding",
                "value": "funding_id",
                "width": "10%"
            }
        ]
    }
}