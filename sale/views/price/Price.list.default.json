{
    "name": "Price List",
    "description": "This view is intended for displaying the list of prices.",
    "header": {
        "actions": {
            "ACTION.CREATE" : [
                {
                    "view": "form.create",
                    "description": "overload form to use for price creation"
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "30%"
            },
            {
                "type": "field",
                "label": "Product",
                "value": "product_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "price_list_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "price",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "vat_rate",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "price_vat",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_active",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "accounting_rule_id",
                "width": "10%",
                "sortable": true
            }
        ]
    }
}