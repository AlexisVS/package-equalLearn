{
    "name": "Price List",
    "description": "This view is intended for displaying the list of prices.",
    "actions": [
        {
            "id": "ACTIONS.CREATE",
            "view": "form.create",
            "description": "overload form to use for price creation"
        }
    ],    
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "20%",
                "sortable": true                
            },
            {
                "type": "field",
                "value": "is_active",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "date_from",
                "width": "20%",
                "sortable": true                
            },
            {
                "type": "field",
                "value": "date_to",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "duration",
                "width": "20%",
                "sortable": true                
            },
            {
                "type": "field",
                "label": "Price List Category",
                "value": "price_list_category_id",
                "width": "20%"
            }
        ]
    }
}