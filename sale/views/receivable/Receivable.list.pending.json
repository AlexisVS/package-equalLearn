{
    "name": "Pending Receivables",
    "description": "This view is intended for displaying the Pending Receivables.",
    "access": {
    },
    "header": {
        "actions": {
            "ACTION.CREATE" : false
        }
    },
    "domain": ["status", "=", "pending"],
    "actions" : [
        {
            "id": "header.pending.actions.bulk_add_invoice",
            "label": "Add to invoice",
            "icon": "list",
            "controller": "sale_receivable_bulk-add-invoice"
        }
    ],
    "operations": {
        "total": {
          "total": {
            "id": "operations.total.total",
            "label": "Total without vat",
            "usage":"amount/money:2",
            "operation": "SUM"
          }
        },
        "price": {
            "price": {
              "id": "operations.total.price",
              "label": "Total with vat",
              "usage":"amount/money:2",
              "operation": "SUM"
            }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "name",
                "width": "25%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "date",
                "width": "25%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "customer_id",
                "label": "Customer",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "unit_price",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "qty",
                "label": "Quantity",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "total",
                "label": "Price Ex VAT",
                "width": "15%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "vat_rate",
                "label": "VAT",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "Price total",
                "value": "price",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "value": "invoice_id",
                "label": "Invoice",
                "width": "30%",
                "readonly": true
            }
        ]
    }
}