{
    "name": "Receivables Selection",
    "description": "This view is intended for displaying the Receivables.",
    "access": {
    },
    "header": {
        "selection": {
            "default" : false,
            "actions" : [
                {
                    "id": "header.selection.actions.add_invoice",
                    "label": "Add to invoice",
                    "icon": "list",
                    "controller": "sale_receivable_add-invoice",
                    "confirm": true
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "5%"
            },
            {
                "type": "field",
                "value": "name",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "date",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "status",
                "readonly": true,
                "width": "10%"
            },
            {
                "type": "field",
                "value": "customer_id",
                "label": "Customer",
                "readonly": true,
                "width": "15%"
            },
            {
                "type": "field",
                "value": "unit_price",
                "width": "5%"
            },
            {
                "type": "field",
                "value": "qty",
                "label": "Quantity",
                "width": "5%"
            },
            {
                "type": "field",
                "value": "total",
                "label": "Price Ex VAT",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "vat_rate",
                "label": "VAT",
                "width": "5%"
            },
            {
                "type": "field",
                "label": "Price total",
                "value": "price",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "invoice_id",
                "label": "Invoice",
                "width": "10%"
            }
        ]
    }
}