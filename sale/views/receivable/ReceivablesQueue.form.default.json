{
    "name": "Receivables Queue",
    "description": "Default form for Receivables Queue",
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "Pending receivables",
                        "id": "section.receivables_id_receivables",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "receivables_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.queue-selection",
                                                    "domain": ["status", "=", "pending"],
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": true
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}