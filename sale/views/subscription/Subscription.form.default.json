{
    "name": "Subscription",
    "description": "This form holds the fields for modifying a Subscription.",
    "actions": [
        {
            "id": "action.shift-subscription",
            "label": "Shift Period",
            "controller": "sale_subscription_shift-period"
        },
        {
            "id": "action.add-subscription-entry",
            "label": "Create Entry",
            "controller": "sale_subscription_add-subscriptionentry"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "75%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "duration",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "33%",
                                                "readonly": true
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "id": "row.expirations",
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": []
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_upcoming_expiry",
                                                "width": "33%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_expired",
                                                "width": "33%",
                                                "readonly": true
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.details",
                        "label": "Details",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "ref_order",
                                                "label": "Reference",
                                                "width": "75%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "25%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "label": "Customer",
                                                "width": "40%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_billable",
                                                "width": "25%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "33%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "license_key",
                                                "width": "75%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "25%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "66%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_id",
                                                "label": "Product (Catalog)",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "label": "Price",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "15%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.entries",
                        "label": "entries",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "subscription_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.selection",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.description",
                        "label": "description",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}