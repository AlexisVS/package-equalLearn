{
    "name": "Time entry",
    "description": "Default form for time entry",
    "actions": [
        {
            "id": "action.receivable",
            "label": "Receivable",
            "controller": "sale_saleentry_add-receivable",
            "visible": [
                ["state", "<>", "draft"],
                ["has_receivable", "=", false],
                ["is_billable", "=", true]
            ]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "id": "section.time-entry",
                        "label": "Time Entry Infos",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Name",
                                                "value": "name",
                                                "width": "50%",
                                                "align": "left",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Start",
                                                "value": "time_start",
                                                "width": "20%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "label": "End",
                                                "value": "time_end",
                                                "width": "20%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Duration",
                                                "value": "duration",
                                                "width": "20%",
                                                "align": "left"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Realised by",
                                                "value": "user_id",
                                                "width": "50%",
                                                "align": "left"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Project",
                                                "value": "project_id",
                                                "width": "25%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "25%",
                                                "align": "left",
                                                "visible": ["project_id", "<>", null]
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Origin",
                                                "value": "origin",
                                                "width": "20%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Related ticket",
                                                "value": "ticket_id",
                                                "width": "20%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Ticket link",
                                                "value": "ticket_link",
                                                "width": "20%",
                                                "align": "left",
                                                "readonly": true
                                            }
                                        ]
                                    },
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Description",
                                                "value": "description",
                                                "width": "50%",
                                                "align": "left",
                                                "widget": {
                                                    "usage": "string/text"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.sale-entry",
                        "label": "Sale",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_id",
                                                "label": "Product (Catalog)",
                                                "width": "100%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "label": "Price",
                                                "width": "50%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "value": "unit_price",
                                                "label": "Unit price amount",
                                                "width": "50%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_billable",
                                                "label": "is Billable",
                                                "width": "100%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_receivable",
                                                "label": "Has Receivable",
                                                "readonly": true,
                                                "width": "50%",
                                                "align": "left"
                                            },
                                            {
                                                "type": "field",
                                                "value": "receivable_id",
                                                "label": "Receivable",
                                                "readonly": true,
                                                "width": "50%",
                                                "align": "left"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
