{
    "name": "Invoice",
    "description": "An invoice is a legal document issued by a seller to a buyer that relates to a sale, and is part of the accounting system.",
    "routes": [
        {
            "id": "item.invoice.send",
            "label": "Imprimer/Envoyer",
            "description": "",
            "icon": "print",
            "app": "yesbabylon",
            "route": "/yesbabylon/invoice/object.id"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "number",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Service",
                                                "value": "service_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "25%",
                                                "visible": ["status", "<>", "cancelled"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "25%",
                                                "visible": ["status", "<>", "cancelled"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "reversed_invoice_id",
                                                "width": "33%",
                                                "visible": ["status", "=", "cancelled"]
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_ref",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "sections.invoice.lines",
                        "label": "Invoice Lines",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoice_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "sections.invoice.entries",
                        "label": "Accounting entries",
                        "visible": ["status", "<>", "proforma"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "accounting_entries_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.invoice",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
